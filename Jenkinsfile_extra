pipeline {
    agent any

    parameters {
        choice(
            name: 'TEST_MODE',
            choices: ['1', '2', '3'],
            description: 'Select the test mode'
        )
        string(name: 'ACTION', defaultValue: 'test', description: 'Action to be performed'),
        string(name: 'USER_ID', defaultValue: '123', description: 'User ID to be tested'),
        string(name: 'ELEMENT_ID', defaultValue: 'user', description: 'HTML element ID for the user name on the web page')
}
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'  // Instaluje wszystkie zależności z pliku requirements.txt
            }
        }

        stage('Frontend Testing') {
            when {
                expression {
                    return params.TEST_MODE == '1'
                }
            }
            steps {
                sh 'python frontend_testing.py'
            }
        }

        stage('Backend Testing') {
            when {
                expression {
                    return params.TEST_MODE == '2'
                }
            }
            steps {
                sh 'python backend_testing.py'
            }
        }

        stage('Combined Testing') {
            when {
                expression {
                    return params.TEST_MODE == '3'
                }
            }
            steps {
                sh "python combined_testing.py ${params.ACTION} ${params.USER_ID} --element_id ${params.ELEMENT_ID}"
            }
        }
    }

    post {
        failure {
            mail to: 'janq79@gmail.com',
                 subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
                 body: "Check console output at ${env.BUILD_URL} to view the results."
        }
    }
}